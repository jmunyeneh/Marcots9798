@page
@model Contacts.IndexModel
@{
    ViewData["Title"] = "Contact Us";
}

<h3>Contact Us</h3>

<form method="post" class="form-horizontal">  
    <div class="form-group">
        <label asp-for="info.Email"></label>
        <input asp-for="info.Email" type="email"  class="form-control" id="email" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <span asp-validation-for="info.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="info.Name"></label>
        <input asp-for="info.Name" type="text" class="form-control" id="name" placeholder="Name">       
    </div>
    <div class="form-group">
        <label asp-for="info.Message"></label>
        <textarea asp-for="info.Message" class="form-control" rows="3" id="message" placeholder="Message"></textarea>       
    </div>

    <button type="submit" class="btn btn-primary" asp-page-handler="post">Submit</button>
</form>